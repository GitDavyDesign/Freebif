<div class="containerLogin">
    <div class="box">
        <span class="borderLine"></span>
        <form method="post">
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div>
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% endif %}

            <h2>Connexion</h2>

            <div class="inputBox">
                <label for="inputEmail"></label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required="required">
                <span>Email</span>
                <i></i>
            </div>

            <div class="inputBox">
                <label for="inputPassword"></label>
                <input type="password" name="password" id="inputPassword" autocomplete="current-password" required="required">
                <span>Mot de passe</span>
                <i></i>
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <div class="links">
                <a href="#">Mot de passe oublié ?</a>
                <a href="#">Inscription</a>
            </div>

            <div>
                <input type="submit" value="Validez">
            </div>
        </form>
    </div>
</div>

