<a href="#" {{ card_classes | default('') }}>
    <div class="card">
        <div class="poster">
{#            {{ dump(freelance.photo) }}#}
            <img src="{{ asset('uploads/photo_free/' ~ freelance.photo) }}" alt="{{ freelance.user.firstname }} {{ freelance.user.lastname }}">
        </div>

        <div class="details">
            <h3>{{ freelance.user.firstname }} {{ freelance.user.lastname }}</h3>

{#            <div class="rating">#}
